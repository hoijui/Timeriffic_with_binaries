<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:baselineAligned="false"
    >

    <Button
        android:id="@+id/mediaVolButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="mediaVol"
        style="@style/ActionButton"
        />
    <Button
        android:id="@+id/alarmVolButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="alarmVol"
        style="@style/ActionButton"
        />
    <Button
        android:id="@+id/systemVolButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="sysVol"
        style="@style/ActionButton"
        />
</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:baselineAligned="false"
    >

    <Button
        android:id="@+id/voiceCallVolButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="voiceCallVol"
        style="@style/ActionButton"
        />
    <Button
        android:id="@+id/wifiButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="wifi"
        style="@style/ActionButton"
        />
    <Button
        android:id="@+id/brightnessButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="brightness"
        style="@style/ActionButton"
        />
</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:baselineAligned="false"
    >

    <Button
        android:id="@+id/airplaneButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="airplane"
        style="@style/ActionButton"
        />
    <Button
        android:id="@+id/bluetoothButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="bluetooth"
        style="@style/ActionButton"
        />
    <Button
        android:id="@+id/button0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="button0"
        style="@style/ActionButton"
        android:visibility="gone"
        />
</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:baselineAligned="false"
    >

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="button1"
        style="@style/ActionButton"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/button2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="button2"
        style="@style/ActionButton"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/button3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="button3"
        style="@style/ActionButton"
        android:visibility="gone"
        />
</LinearLayout>

</merge>
