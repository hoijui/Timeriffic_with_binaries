<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alfray.timeriffic"
    android:sharedUserId="com.alfray.timeriffic" android:versionName="1.09.06" android:versionCode="10906">

    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4"/>

    <!-- Package-specific Key for the Backup service. -->
    <meta-data
        android:name="com.google.android.backup.api_key"
        android:value="AEdPqrEAAAAIXS_7uOiRQbIyYv9blIYVgAgFutG47YljcSKDUA" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.HARDWARE_TEST" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS"/>
    <!-- Vibrate is used by NotificationManager.notify() -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"  />
    <!-- For Data. Not working yet. -->
    <uses-permission android:name="android.permission.MODIFY_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!--  these are only needed by the stats agent, currently deactivated.
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    -->


    <uses-feature android:name="android.hardware.bluetooth" android:required="false" />
    <uses-feature android:name="android.hardware.telephony" android:required="false" />
    <uses-feature android:name="android.hardware.wifi" android:required="false" />
    <uses-feature android:name="android.hardware.touchscreen" android:required="false" />
    <supports-screens
        android:largeScreens="true"
        android:anyDensity="true"
        android:smallScreens="true"
        android:resizeable="true"
        android:normalScreens="true" />

    <application
        android:label="@string/app_name"
        android:icon="@drawable/app_icon"
        android:name=".app.t1.TimerifficApp1"
        android:backupAgent="com.alfray.timeriffic.app.TimerifficBackupAgent"
        android:restoreAnyVersion="true"
        android:allowBackup="true"
        android:killAfterRestore="true"
        >


        <receiver android:name=".app.UpdateReceiver">
            <intent-filter>
                <!-- this triggers an apply state too -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.alfray.intent.action.APPLY_STATE" />
            </intent-filter>
            <intent-filter>
                <!-- this triggers an apply state too -->
                <action android:name="com.alfray.intent.action.UI_CHECK" />
            </intent-filter>
            <intent-filter>
                <!-- this does NOT trigger apply state, just recompute alarms. -->
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
                <action android:name="android.intent.action.TIME_SET" />
            </intent-filter>
            <!--  not used yet, maybe later to have profiles per caller. -->
            <!-- intent-filter>
                <action android:name="android.intent.action.PHONE_STATE"/>
            </intent-filter -->
        </receiver>

        <activity
            android:name=".prefs.PrefsActivity"
            android:label="@string/prefs_title" />

        <activity
            android:name=".app.IntroActivity"
            android:label="@string/intro_title"
            android:theme="@android:style/Theme.Dialog" />

        <activity
            android:name=".profiles.ProfilesUI"
            android:label="@string/app_name" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name=".profiles.EditProfileUI"
            android:label="@string/editprofile_title"
            android:theme="@android:style/Theme.Dialog" />

        <activity
            android:name=".actions.EditActionUI"
            android:label="@string/editaction_title" />

        <activity
            android:name=".utils.ChangeBrightnessActivity"
            android:theme="@style/NoBackground"
            android:taskAffinity="com.alfray.timeriffic.Change"
            android:excludeFromRecents="true"/>

        <service android:name=".app.PhoneStateService"/>

        <activity
            android:theme="@android:style/Theme.Dialog"
            android:label="@string/errorreport_title"
            android:name=".error.ErrorReporterUI"
            android:windowSoftInputMode="adjustPan" />

        <service android:name=".app.UpdateService" />
    </application>

</manifest>
